			<jdbc-user-service data-source-ref="dataSource"
 
		   		users-by-username-query="SELECT login, password, enabled FROM users where login=?;" 
 
			   	authorities-by-username-query="select u.login, r.role from users u, role r, user_role ur
			      where u.id = ur.user_id and r.id = ur.role_id and u.login =?" 
 
		/>
			
		</authentication-provider>
